<%= hidden_field_tag 'id_produto', @produto.id %>

<div class="jumbotron show-produto-container" xmlns="http://www.w3.org/1999/html">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @produto.imagem.url(:grande), :class => "img-thumbnail" %>
    </div>
    <div class="col-md-8">

      <h2 class="centralizado"> <%= @produto.nome %> </h2>

      <br>

      <h3> Sua nota: <strong id="sua-nota"> <%= current_user.nota_para_o_produto(@produto) %> </strong>
        <a class="dar-nota" href="#"> Dar nota </a>

        <select class="form-control" id='combo-notas'>
          <option value="" style="display: none"> Nota</option>
          <option value="0"> 0</option>
          <option value="1"> 1</option>
          <option value="2"> 2</option>
          <option value="3"> 3</option>
          <option value="4"> 4</option>
          <option value="5"> 5</option>
          <option value="6"> 6</option>
          <option value="7"> 7</option>
          <option value="8"> 8</option>
          <option value="9"> 9</option>
          <option value="10"> 10</option>
        </select>

      </h3>

      <h3> Nota média: <strong> <%= @produto.nota_media %> </strong></h3>

      <br>

      <h4>

        <%= @produto.descricao %>

      </h4>

    </div>
  </div>
</div>

<div class="jumbotron">

  <h4> Escreva um comentário para este produto: </h4>

  <form action="/produtos/comentar" id='form-comentar' data-remote="true">
    <%= hidden_field_tag 'produto_comentario', @produto.id %>
    <textarea id='campo_comentario' name="comentario" class="form-control" rows="3"></textarea>
    <button type="submit" class="btn btn-primary">Comentar</button>
  </form>

  <br> <br>

  <div id="comentarios">

    <% @comentarios.each do |comentario| %>

        <div class="row">

          <div class="col-md-4 comentario-foto-container">

            <img class="img-thumbnail comentario-foto" src="http://www.fodecast.com.br/wp-content/uploads/2013/09/1010870_580481862012190_397054848_n.jpg">

            <h5 class="centralizado"> <%= comentario.user.name %> </h5>

            <h5 class="centralizado"> Nota: <strong> <%= comentario.user.nota_para_o_produto(@produto) %> </strong></h5>

          </div>

          <div class="col-md-8 comentario">

            <h5> <%= comentario.comment %> </h5>

          </div>

        </div>

        <hr>

    <% end %>

  </div>

</div>




